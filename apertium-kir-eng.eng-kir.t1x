<?xml version="1.0" encoding="UTF-8"?>
<transfer default="chunk">
  <section-def-cats>
	<def-cat n="nom">
	  <cat-item tags="n.*"/>
	</def-cat>
	<def-cat n="sent">
	  <cat-item tags="sent"/>
	</def-cat>
		<def-cat n="pron">
			<cat-item tags="prn.*"/>
		</def-cat>
		<def-cat n="pron_subj">
			<cat-item tags="prn.subj.*"/>
		</def-cat>
		<def-cat n="definites">
			<cat-item tags="det.def.*"/>
			<cat-item tags="det.dem.*"/>
			<cat-item tags="det.pos.*"/>
		</def-cat>
		<def-cat n="noun">
			<cat-item tags="n.*"/>
		</def-cat>
		<def-cat n="verb">
			<cat-item tags="v.*"/>
			<cat-item tags="vblex.*"/>
		</def-cat>
  </section-def-cats>

	<section-def-attrs>
		<def-attr n="pos">
			<attr-item tags="n"/>
			<attr-item tags="prn"/>
			<attr-item tags="det"/>
		</def-attr>
		<def-attr n="e_case">
			<attr-item tags="subj"/>
			<attr-item tags="obj"/>
		</def-attr>
		<def-attr n="case">
			<attr-item tags="nom"/>
			<attr-item tags="acc"/>
		</def-attr>
		<def-attr n="pron_type">
			<attr-item tags="pers"/>
			<attr-item tags="dem"/>
		</def-attr>
		<def-attr n="pers">
			<attr-item tags="p1"/>
			<attr-item tags="p2"/>
			<attr-item tags="p3"/>
		</def-attr>
		<def-attr n="num">
			<attr-item tags="sg"/>
			<attr-item tags="pl"/>
		</def-attr>
		<def-attr n="poss">
			<attr-item tags="px1sg"/>
			<attr-item tags="px1pl"/>
			<attr-item tags="px2sg"/>
			<attr-item tags="px2pl"/>
			<attr-item tags="px3sp"/>
		</def-attr>
		<def-attr n="frm">
			<attr-item tags="frm"/>
		</def-attr>
		<def-attr n="neg">
			<attr-item tags="neg"/>
		</def-attr>

	</section-def-attrs>

  <section-def-vars>
	<def-var n="number"/>
  </section-def-vars>

  <section-def-macros>
	<def-macro n="test" npar="1">
		<let>
			<var n="number"/>
			<lit v=""/>
		</let>
	</def-macro>
  </section-def-macros>

  <section-rules>
	<rule comment="REGLA: SENT">
	  <pattern>
		<pattern-item n="sent"/>
	  </pattern>
	  <action>
		<out>
		  <chunk name="sent" case="caseFirstWord">
			<tags>
			  <tag><lit-tag v="SENT"/></tag>
			</tags>
			<lu>
			  <clip pos="1" side="tl" part="whole"/>
			</lu>
		  </chunk>
		</out>
	  </action>
	</rule>

	<rule comment="REGLA: make subj/obj pronouns nom/acc">
		<pattern>
			<pattern-item n="pron"/>
		</pattern>
		<action>
			<choose>
				<when>
					<test>
						<equal>
							<clip pos="1" side="sl" part="e_case"/>
							<lit-tag v="subj"/>
						</equal>
					</test>
					<let>
						<clip pos="1" side="tl" part="e_case"/>
						<lit-tag v="nom"/>
					</let>
				</when>
			</choose>
			<out>
				<chunk name="pronoun" case="caseFirstWord">
					<tags>
						<tag>
							<clip pos="1" side="tl" part="case"/>
						</tag>
					</tags>
					<lu>
						<clip pos="1" side="tl" part="lem"/>
						<clip pos="1" side="tl" part="pos"/>
						<lit-tag v="pers"/>
						<clip pos="1" side="tl" part="pers"/>
						<clip pos="1" side="tl" part="num"/>
						<clip pos="1" side="tl" part="case"/>
					</lu>
				</chunk>
			</out>
		</action>
	</rule>

	<rule comment="REGLA: mark definite verb object with acc">
		<pattern>
			<pattern-item n="verb"/>
			<pattern-item n="definites"/>
			<pattern-item n="noun"/>
		</pattern>
		<action>
			<out>
				<chunk name="object" case="caseFirstWord">
					<tags>
						<tag><lit-tag v="default"/></tag>
					</tags>
					<lu>
						<clip pos="2" side="tl" part="whole"/>
					</lu>
					<lu>
						<clip pos="3" side="tl" part="lem"/>
						<clip pos="3" side="tl" part="pos"/>
						<clip pos="3" side="tl" part="num"/>
						<clip pos="3" side="tl" part="poss"/>
						<clip pos="3" side="tl" part="frm"/>
						<lit-tag v="acc"/>
					</lu>
				</chunk>
				<b pos="1"/>
				<chunk name="verb" case="caseFirstWord">
					<tags>
						<tag><lit-tag v="default"/></tag>
					</tags>

					<lu>
						<clip pos="1" side="tl" part="whole"/>
					</lu>
				</chunk>
			</out>
		</action>
	</rule>

